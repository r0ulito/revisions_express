form(action=`/users/${user.id}` method="post")
    label(for='name') name
    input(type='text' name='name' id='name' placeholder='Entrez votre nom' value= user.name )
    label(for='username') username
    input(type='text' name='username' id='username' placeholder='Entrez votre nom d\'utilisateur' value= user.username)
    label(for='email') email
    input(type='email' name='email' id='email' placeholder='Entrez votre email' value= user.email)

    input(type='submit' value="send")